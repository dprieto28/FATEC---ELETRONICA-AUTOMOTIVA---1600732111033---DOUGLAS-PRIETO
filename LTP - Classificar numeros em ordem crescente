#include <stdio.h>

int main(void) {
  //declarar variaveis
  int in1, in2, in3, out1, out2, out3;

  //orientar usuario
  printf("Digite o primeiro numero: \n");
  scanf("%d", &in1);
  printf("Digite o segundo numero: \n");
  scanf("%d", &in2);
  printf("Digite o terceiro numero: \n");
  scanf("%d", &in3);
  
  //Verificar se in1 é maior, e os demais
  if(in1<in2 && in1<in3)
  {
    out1 = in1;
    if(in2<in3)
    {
      out2 = in2;
      out3 = in3;
    }
    else{
      out2 = in3;
      out3 = in2;
    }
  }

  //Verificar se in2 é maior, e os demais
  if(in2<in1 && in2<in3)
  {
    out1 = in2;
    if(in1<in3)
    {
      out2 = in1;
      out3 = in3;
    }
    else{
      out2 = in3;
      out3 = in1;
    }
  }

    //Verificar se in3 é maior, e os demais
  if(in3<in1 && in3<in2)
  {
    out1 = in3;
    if(in1<in2)
    {
      out2 = in1;
      out3 = in2;
    }
    else{
      out2 = in2;
      out3 = in1;
    }
  }
  
  //mostrar os valores e a classificacao
  printf("\n\n");
  printf("Os valores digitados foram: %d, %d, %d. \n\n\n", in1, in2, in3);
  printf("Em ordem crescente são: %d, %d, %d. \n", out1, out2, out3);

  //fim
  return 0;
}
